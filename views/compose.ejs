<%- include("partials/header"); %>

<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label for="compose-input">Title</label>
        <input id="compose-input" class="form-control" type="text" name="postTitle">
    </div>
    <div class="form-group">
        <label for="compose-textarea">Post</label>
        <textarea id="compose-textarea" class="form-control" name="postText" rows="10"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Publish</button>
</form>

<%- include("partials/footer"); %>